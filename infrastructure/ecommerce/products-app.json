{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String"
        },
        "environment_id": {
            "type": "String"
        },
        "db-connection-string": {
            "type": "String"
        },
        "registry-password": {
            "type": "string"
        },
        "imageName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
    {
        "name": "products-app",
        "type": "Microsoft.Web/containerApps",
        "apiVersion": "2021-03-01",
        "kind": "containerapp",
        "location": "[parameters('location')]",
        "properties": {
            "kubeEnvironmentId": "[parameters('environment_id')]",
            "configuration": {
                "activeRevisionsMode": "multiple",
                "secrets": [
                {
                    "name": "db-connection-string",
                    "value": "[parameters('db-connection-string')]"
                },
                {
                    "name": "advcoredevazurecrio-advcoredev-pwd",
                    "value": "[parameters('registry-password')]"
                }],
                "registries": [
                    {
                        "server": "advcoredev.azurecr.io",
                        "username": "advcoredev",
                        "passwordSecretRef": "advcoredevazurecrio-advcoredev-pwd"
                    }
                ],
                "ingress": {
                    "external": true,
                    "targetPort": "80",
                    "transport": "auto"
                }
            },
            "template": {
                "containers": [
                    {
                        "image": "[parameters('imageName')]",
                        "name": "products-app",
                        "env": [
                            {
                                "name": "CONNECTION_STRING",
                                "secretref": "db-connection-string"
                            }
                        ]
                    }
                ],
                "scale": {
                    "minReplicas": 0,
                    "maxReplicas": 5,
                    "rules": []
                }
            }
        }
    }]
}